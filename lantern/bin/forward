#!/usr/bin/env python2
import sys
import requests

if (len(sys.argv) > 1):
    sys.argv.pop(0)
    for item in sys.argv:
        val =  str(item).encode("ascii")
        print("adding to outbox: " + val)
        r = requests.put("https://localhost/api/outbox", verify=False, json={"message": val})
        print (r.text)
 
else:
    print("no message to queue for outbox...")